<script>
	function change()
	{
		var input = document.getElementById('input');
		var opt = document.getElementById(input.value);
		opt.getElementsByTagName('input')[0].name = "txtId";
	}
</script>
<form method="post">
<table cellpadding="0" cellspacing="0" >
	<tr>
		<td>Contenido:</td><td><input type="text" name="txtContent" /></td>
	</tr>
	<tr>
		<td>Fecha:</td><td><input type="text" name="txtDate" /></td>
	</tr>
	<tr>
		<td>Palabra Clave:</td><td><input type="text" name="txtKeywords" /></td>
	</tr>
	<tr>
	<td>
		Categoria
	</td>
	<td>
	<input list="txtName" name="txtName" id="input" onchange="change()">
	<datalist id="txtName">
	{% for category in category %}
		<option id="{{ category.name }}">
			{{ category.name }}
			<input type="hidden" name="" value="{{ category.id }}">
		</option>
	{% endfor %}
	</datalist>
	</td>
	</tr>
	<tr>
		<td>Imagen:</td><td><input type="text" name="txtImagePath" /></td>
	</tr>
	<tr>
		<td><input type="submit" name="btnNews" value="Guardar"/></td>
	</tr>
</table>
</form>


